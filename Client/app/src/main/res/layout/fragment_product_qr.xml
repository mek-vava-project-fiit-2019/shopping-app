<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryLight">

    <TextView
        android:id="@+id/product_name_QR"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:text="Avivaz"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="50sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/product_image_QR"
        android:layout_width="391dp"
        android:layout_height="389dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        tools:srcCompat="@tools:sample/avatars[3]" />

    <TextView
        android:id="@+id/product_price_QR"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="false"
        android:ems="10"
        android:text="7.99 â‚¬"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/decrease_quantity_QR"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_marginStart="10dp"
            android:background="@color/colorPrimaryDark"
            android:text="-"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/product_quantity_QR"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:ems="10"
            android:text="7 ks."
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="40sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/increase_quantity_QR"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:text="+"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="40sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_to_basket_QR"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="76dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:background="@color/colorPrimaryDark"
            android:text="basket"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="40sp" />

        <Button
            android:id="@+id/pay_QR"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            android:layout_weight="2"
            android:background="@color/colorPrimaryDark"
            android:text="buy"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="40sp" />

    </LinearLayout>

</LinearLayout>